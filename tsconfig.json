{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build",
    "jsx": "react",
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./src",

    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/server/server.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "babelOptions": {
      "babelrc": false,
      "presets": ["env"]
    }
  }
}